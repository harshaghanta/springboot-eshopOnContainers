<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/base.xml" />
    <springProperty scope="context" name="appName" source="spring.application.name" />

    <appender name="ROLLING" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>/app/logs/${appName}.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- daily rollover and keep 30 days' worth of history -->
            <fileNamePattern>logs/${appName}.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <!-- Default Spring Boot console log pattern -->
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %5p [%t] --- [%15.15logger{39}] : %m%n</pattern>
        </encoder>
    </appender>


    <root level="INFO">
        <appender-ref ref="ROLLING" />
    </root>
</configuration>